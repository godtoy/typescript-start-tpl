{
  "compilerOptions": {
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "outDir": "./build",
    "strictFunctionTypes": false,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "strict": false,
    "allowJs": false,
    "target": "es5",

    "lib": [
      "es5",
      "dom",
      "es2015"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
